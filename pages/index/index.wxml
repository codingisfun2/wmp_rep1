<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 请点击获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">Hi {{userInfo.nickName}}!</text>
    </block>
  </view>
  <view class="usergreeting">
    <text>{{greeting}}!</text>
  </view>
  <view class="usergreeting">
    <swiper
      indicator-dots="{{true}}"  
      autoplay="{{true}}"
      style="width: 750rpx;">
      <swiper-item>
        <image src="https://cifun.pythonanywhere.com/static/assets/img/logo.png"></image>
      </swiper-item>
      <swiper-item>
        <image src="https://picsum.photos/250"></image>
      </swiper-item>
      <swiper-item>
        <image src="https://picsum.photos/300"></image>
      </swiper-item>
    </swiper>
  </view>
</view>
